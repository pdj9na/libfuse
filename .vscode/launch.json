{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) 生成",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask":"build",
            "program":"",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) 启动",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask":"build",
            "postDebugTask": "end",
            "program": "${workspaceFolder}/example/.libs/fusexmp_fh",
            //"args": [ "--help" ],
            "args": [ "-s","-d"
                ,"-omodules=subdir,subdir=/mnt/fusesubdir_src,allow_other",
                "/mnt/fusesubdir_dest"
            ],
            //直接终端执行：
            // LD_LIBRARY_PATH=. example/.libs/fusexmp_fh "-s" "-d" -omodules=subdir,subdir=/mnt/fusesubdir_src,allow_other /mnt/fusesubdir_dest
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [{ "name": "LD_LIBRARY_PATH", "value": "$LD_LIBRARY_PATH:example/.libs"}
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) showhelp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/example/.libs/fusexmp_fh",
            "args": [ "--help" ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [{ "name": "LD_LIBRARY_PATH", "value": "$LD_LIBRARY_PATH:lib/.libs"}
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}